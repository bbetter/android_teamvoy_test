<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:text="Заголовок"
                android:layout_weight="2"
                android:textSize="20dp"/>
            <EditText android:id="@+id/noteTitleEdit"
                android:layout_weight="5"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:text="Текст"
                android:layout_weight="2"
                android:textSize="20dp"/>
            <EditText android:id="@+id/noteTextEdit"
                android:layout_weight="5"/>
        </TableRow>
        <Button
            android:text="Завантажити зображення"
            android:id="@+id/uploadPhotoBtn"/>
        <HorizontalScrollView android:id="@+id/imagesHolder">

        </HorizontalScrollView>
        <Button
            android:text="Підтвердити"
            android:id="@+id/submitNoteBtn"/>
    </TableLayout>
</LinearLayout>